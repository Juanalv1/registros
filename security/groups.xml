<odoo>
    <data>
        <!-- Crear una categoria -->
        <record id="crm_category" model="ir.module.category">
            <field name="name">CRM Categoria</field>
        </record>
        <!-- Crear un grupo -->
        <record id="usuario_movil" model="res.groups">
            <field name="name">Usuario Movil</field>
            <field name="category_id" ref="crm_category"/>
        </record>

        <record id="usuario_email" model="res.groups">
            <field name="name">Usuario Email</field>
            <field name="category_id" ref="crm_category"/>
        </record>

        <record id="admin_movil" model="res.groups">
            <field name="name">Admin Movil</field>
            <field name="category_id" ref="crm_category"/>
        </record>

        <record id="admin_phone" model="res.groups">
            <field name="name">Admin Phone</field>
            <field name="category_id" ref="crm_category"/>
        </record>

        <record id="crm_email_user_rule" model="ir.rule">
            <field name="name">See only emails method records</field>
            <field name="model_id" ref="model_crm_lead"/>
            <field name="domain_force">[('med_contacto', '=', 'phone')]</field>
            <field name="groups" eval="[(4, ref('registros.admin_movil'))]"/>
        </record>

        <record id="crm_lead_rule_all" model="ir.rule">
            <field name="active" eval="False"/>
        </record>

    </data>
</odoo>
